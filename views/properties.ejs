<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <!-- Header styles -->
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <!-- Page styles -->
    <link rel="stylesheet" href="/styles/properties.css" type="text/css" />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <header id="header"><%-include('partials/_header') %></header>
    <main id="main">
      <div class="d-flex flex-column justify-content-center align-items-center flex-wrap">
        <% for(const property in properties) { %>
        <div id="<%= properties[property].id%>" class="card mb-3">
          <div class="row g-0">
            <div class="col-md-4">
              <img
                src="<%= properties[property].image_url %>"
                class="img-fluid rounded-start"
                alt="..."
              />
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= properties[property].name %></h5>
                <p class="card-text"><%= properties[property].description %></p>
                <p class="card-text">
                  <p class="text-muted">Bed: <%= properties[property].number_of_bedrooms %> <span class="text-muted">Bath: <%= properties[property].number_of_bathrooms %></span></p>
                </p>
                <p class="card-text cost">$<%= properties[property].cost %></p>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </main>

    <!-- Scripts -->
    <script src="../public/app.js"></script>
    <!-- Bootstrap Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
