<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Home Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <!-- Header styles -->
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <!-- Page styles -->
    <link rel="stylesheet" href="/styles/properties.css" type="text/css" />
    <!-- Bootstrap CSS -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"
      integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS"
      crossorigin="anonymous"
    />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <header id="header"><%-include('partials/_header') %></header>
    <main id="main">
      <h3 class='text-center'>Properties</h3>
      <a  data-bs-toggle="collapse" href="#filter" role="button" aria-expanded="false">
        <p class="filter">Filter</p>
      </a>
      <div class="collapse" id="filter">
        <form action="/properties" method="GET">
          <div class="mb-3">
            <label for="Price" class="form-label">Min Price:</label>
            <input type="number" class="form-control" name="price">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <% for(const property in properties) { %>
        <div class="col-4">
          <div id="<%= properties[property].id%>" class="card property-card h-100">
            <img src="<%= properties[property].image_url %>" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= properties[property].name %></h5>
              <p class="card-text"><%= properties[property].description %></p>
              <p class="card-text">
                <p class="text-muted">Bed: <%= properties[property].number_of_bedrooms %> <span class="text-muted">Bath: <%= properties[property].number_of_bathrooms %></span></p>
              </p>
              <div class="card-text d-flex justify-content-between">
                <p class="cost">$<%= properties[property].cost %></p>
                <% if (properties[property].isfeatured) { %>
                  <i class="fas fa-star"></i>
                  <% } %>
              </div>
            </div>
          </div>
        </div> 
        <% } %>
      </div>
    </main>

    <!-- Scripts -->
    <script src="../public/app.js"></script>
    <!-- Bootstrap Script -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
